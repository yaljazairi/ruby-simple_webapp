set -e -x

tar xzf ruby_2.6.3/ruby-2.6.3.tar.gz
pushd ruby-2.6.3
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --disable-install-doc \
    --with-opt-dir=/var/vcap/packages/libyaml_0.2.5

  make
  make install
popd

tar zxvf ruby_2.6.3/rubygems-3.2.16.tgz
pushd rubygems-3.2.16
  ${BOSH_INSTALL_TARGET}/bin/ruby setup.rb
popd

${BOSH_INSTALL_TARGET}/bin/gem install ruby_2.6.3/bundler-1.2.1.gem --no-ri --no-rdoc